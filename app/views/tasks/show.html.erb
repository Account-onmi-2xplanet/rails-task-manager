<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<p><%= @task.completed ? "✅ This task is completed" : "❎This task is not completed" %></p>

<%= link_to "Back to list", tasks_path %>
<%= link_to "edit the task", edit_task_path(@task) %>
<p>
  <%= link_to 'Remove this task', task_path(@task), method: :delete, data: { confirm: 'Are you Sure?' } %>
</p>